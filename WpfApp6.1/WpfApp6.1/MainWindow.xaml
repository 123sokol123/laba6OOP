<Window x:Class="WpfApp6._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Measuring Devices" Height="350" Width="525">
    <Grid>
        <ComboBox x:Name="DeviceSelector" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10">
            <ComboBoxItem Content="Length Device" />
            <ComboBoxItem Content="Mass Device" />
        </ComboBox>
        <Button Content="Measure" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Width="100"
                Click="MeasureButton_Click" />
        <TextBlock x:Name="ResultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0"
                   Width="400" Text="Result will appear here." />
    </Grid>
</Window>
