<Window x:Class="WpfApp6._3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multithreading App" Height="450" Width="800">
    <Grid>
        <Canvas Name="MainCanvas" Background="LightGray" Width="800" Height="300" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Ellipse Name="HighPriorityObject" Width="30" Height="30" Fill="Red" Canvas.Left="0" Canvas.Top="50"/>
            <Ellipse Name="LowPriorityObject" Width="30" Height="30" Fill="Blue" Canvas.Left="0" Canvas.Top="150"/>
        </Canvas>
        <Button Name="StartButton" Content="Start" Width="80" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20" Click="StartButton_Click"/>
        <Button Name="StopButton" Content="Stop" Width="80" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="169,0,0,20" Click="StopButton_Click"/>
    </Grid>
</Window>
